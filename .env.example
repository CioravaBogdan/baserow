# Environment variables for Baserow Viral Content Management
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_PASSWORD=your_secure_database_password_here
SECRET_KEY=your_very_long_secret_key_minimum_50_characters_random_string

# Email Configuration (for notifications and user management)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@infant-viral.com

# Cloudflare Tunnel Configuration
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Monitoring Configuration
GRAFANA_PASSWORD=secure_grafana_admin_password

# MCP Configuration
MCP_API_TOKEN=generate_secure_mcp_token_for_claude_access

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_CLOUD_PROVIDER=cloudflare_r2  # or aws_s3, google_cloud
BACKUP_BUCKET_NAME=baserow-viral-backups
BACKUP_ACCESS_KEY=your_cloud_storage_access_key
BACKUP_SECRET_KEY=your_cloud_storage_secret_key

# Domain Configuration
DOMAIN_NAME=baserow.infant-viral.com

# Security Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=very_secure_admin_password_here

# API Tokens (generate these after setup)
N8N_API_TOKEN=generate_after_setup
ANALYTICS_API_TOKEN=generate_after_setup
CLAUDE_MCP_TOKEN=generate_after_setup

# Rate Limiting
API_RATE_LIMIT=1000  # requests per hour per IP
MCP_RATE_LIMIT=500   # requests per hour per token

# Performance Tuning
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_EFFECTIVE_CACHE_SIZE=2GB
REDIS_MAXMEMORY=512mb

# Timezone
TZ=Europe/Bucharest

# Development/Production Flag
ENVIRONMENT=production  # or development
